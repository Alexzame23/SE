#include <stdio.h>
#include <xil_printf.h>
#include "xil_io.h"

#define PUT_FIFO(val) putfsl(val, 0)  // Escribir en el AXI-Stream

u32 valor(){
	char valor;
	xil_printf("Introduce la fila (0-15): ");
	fila = XUartLite_RecvByte(XPAR_AXI_UARTLITE_0_BASEADDR);
	switch (key) {
	case 'a':

		break;
	case 'b':

		break;
	case 'c':

		break;
	case 'd':

		break;
	case 'e':

		break;
	default:
		xil_printf("Opcion no valida. Por favor, selecciona entre a y e.\n");
